{
    "name": "gsap-block-animator/core",
    "description": "GSAP Block Animator - Advanced WordPress Gutenberg block animations with TypeScript and modern PHP architecture",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "version": "2.0.0",
    "authors": [
        {
            "name": "Tevin Hendricks",
            "email": "tevin@example.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "psr/container": "^2.0",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0",
        "brain/monkey": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "GSAPBlockAnimator\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GSAPBlockAnimator\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "stan": "phpstan analyse includes --level=8",
        "cs": "phpcs --standard=WordPress includes/",
        "cs:fix": "phpcbf --standard=WordPress includes/",
        "quality": [
            "@cs",
            "@stan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}